{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./build",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom",
      "dom.iterable",
      "es2016.array.include"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}